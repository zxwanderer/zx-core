{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "make_tileset",
            "command": "python3 ${workspaceFolder}/engine/bin/cross-platform/scr2spr.py --width 2 --height 2 --color True --count 191 -i ${workspaceFolder}/data/tiles/tiles.scr -o ${workspaceFolder}/out/tiles.bin",
            "problemMatcher": [],
        },
        {
            "type": "shell",
            "label": "make_sna",
            "osx": {
                "command": "${workspaceFolder}/engine/bin/osx/sjasmplus",
                "args": [
                    "--dos866",
                    "--nofakes",
                    "--dirbol",
                    "--outprefix=${workspaceFolder}/out/",
                    "--lst=${workspaceFolder}/out/program.list",
                    "--fullpath",
                    "${workspaceFolder}/make_sna.asm"
                ],
            },
            "linux": {
                "command": "${workspaceFolder}/engine/bin/linux/sjasmplus",
                "args": [
                    "--dos866",
                    "--nofakes",
                    "--dirbol",
                    "--outprefix=${workspaceFolder}/out/",
                    "--lst=${workspaceFolder}/out/program.list",
                    "--fullpath",
                    "${workspaceFolder}/make_sna.asm"
                ],
            },
            "problemMatcher": "$errmatcher-sjasmplus",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "shell",
            "label": "run_sna",
            "osx": {
                "command": "open -a 'Fuse' ${workspaceFolder}/out/program.sna"
            },
            "linux": {
                "command": "flatpak run net.sf.fuse_emulator/x86_64/stable ${workspaceFolder}/out/program.sna"
            },
            "dependsOn": [
                "make_tileset",
                "make_sna"
            ],
            "problemMatcher": []
        }
    ]
}
